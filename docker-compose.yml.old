services:
  # Flask Web Application
  flask-app:
    build: 
      context: ./app
      dockerfile: Dockerfile
    container_name: steam-flask-app
    ports:
      - "5000:5000"
    volumes:
      - ./app:/app
    environment:
      - FLASK_APP=run.py
      - FLASK_ENV=development
    depends_on:
      - mysql-central
      - mysql-node2
      - mysql-node3
    networks:
      - steam-network

  # Central Node (Node 1)
  mysql-central:
    image: mysql:8.0
    container_name: mysql-central
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: steam_games_data_warehouse
    ports:
      - "3306:3306"
    volumes:
      - mysql-central-data:/var/lib/mysql
      - ./init-scripts:/docker-entrypoint-initdb.d
    networks:
      - steam-network

  # Node 2
  mysql-node2:
    image: mysql:8.0
    container_name: mysql-node2
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: steam_games_data_warehouse
    ports:
      - "3307:3306"
    volumes:
      - mysql-node2-data:/var/lib/mysql
      - ./init-scripts:/docker-entrypoint-initdb.d
    networks:
      - steam-network

  # Node 3
  mysql-node3:
    image: mysql:8.0
    container_name: mysql-node3
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: steam_games_data_warehouse
    ports:
      - "3308:3306"
    volumes:
      - mysql-node3-data:/var/lib/mysql
      - ./init-scripts:/docker-entrypoint-initdb.d
    networks:
      - steam-network

networks:
  steam-network:
    driver: bridge

volumes:
  mysql-central-data:
  mysql-node2-data:
  mysql-node3-data:
